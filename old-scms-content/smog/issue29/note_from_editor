<!--Easter Egg Code-->
    <style type="text/css">
      #emoticons div {
        position:fixed;
        padding:4px 8px;
        border-radius:3px;
        border:1px solid transparent;
        white-space:nowrap;
      }
      .emote-style-0 {
        background-color:#e2adea;
        color:#9228a3;
        border-color:#9228a3;
      }
      .emote-style-1 {
        background-color:#a4b7fc;
        color:#2b3d7f;
        border-color:#2b3d7f;
      }
      .emote-style-2 {
        background-color:#f7ce99;
        color:#b7823c;
        border-color:#b7823c;
      }
      .emote-style-3 {
        background-color:#88ef81;
        color:#1f7a18;
        border-color:#1f7a18;
      }
    </style>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
      //<![CDATA[
          var emotes = [];
          var Emote = function() {
            this.init();
          };

          Emote.prototype.masterIndex = 0;
          Emote.prototype.icons = [':O!','^_^','u_u!','xD',':p','!_!','-_-','>_>!','.-.','9.9','?_?',':O!!!!!!!','*_*','._.','?_?',':D',':)'];
          Emote.prototype.init = function() {
            var index = Emote.prototype.masterIndex++;
            $('#emoticons').append('<div id="emote-'+index+'" class="emote-style-'+index%4+'"></div>');
            this.element = $('#emote-'+index);
            this.cycle();
          };
          Emote.prototype.cycle = function(ctxt) {
            var context = typeof(ctxt) === 'undefined' ? this : ctxt;
            context.element.hide({
              duration:250,
              complete: function(){
                context.element.html(context.icons[Math.floor(Math.random()*context.icons.length)]);
                context.element.css('top',Math.floor(Math.random()*document.documentElement.clientHeight)).css('left',Math.floor(Math.random()*document.documentElement.clientWidth))
                context.element.show({
                  duration:250,
                  complete:function(){
                    var t = setTimeout(function(){context.cycle(context);}, Math.floor(Math.random()*2000+1000));
                  }
                });
              }
            });
          };

          $(function(){
            var kkeys = [], ki = "38,38,40,40,37,39,37,39,66,65";
            $(document).keydown(function (e) {
                kkeys.push(e.keyCode);
                if (kkeys.toString().indexOf(ki) >= 0) {
                    $(document).unbind('keydown', arguments.callee);
                    var count = Math.floor(document.documentElement.clientHeight * document.documentElement.clientWidth / 40000);

                    for(var i= 0; i < count; i++)
                      emotes.push(new Emote());
                }
                else if (kkeys.length > 100)
                    kkeys = kkeys.slice(89);
            });
          });
      //]]>
    </script>